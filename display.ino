int c = 11; // roxo
int d = 10; // verde2
int e = 9; // azul
int f = 8; // azul2
int g = 7;  // branco

void setup(){
  pinMode ( a, OUTPUT);
  pinMode ( b, OUTPUT);
  pinMode ( c, OUTPUT);
  pinMode ( d, OUTPUT);  
  pinMode ( e, OUTPUT);
  pinMode ( f, OUTPUT);
  pinMode ( g, OUTPUT);

}

